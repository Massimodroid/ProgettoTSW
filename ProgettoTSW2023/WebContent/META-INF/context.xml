<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource name="jdbc/smartphone"
	auth="Container"
	driverClassName="com.mysql.cj.jdbc.Driver"
	type="javax.sql.DataSource"
	username="${ConfigLoader.getUsername()}"
	password="${ConfigLoader.getPassword()}"
	url="jdbc:mysql://localhost:3306/smartphone?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>"/>
</Context>